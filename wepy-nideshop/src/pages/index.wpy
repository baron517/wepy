<script>
  import wepy from 'wepy'
  import util from '../utils/util.js'
  import api from '../config/api.js'

  export default class Index extends wepy.page {
    config = {
    }
    components = {
    }
    data = {
      newGoods: [],
      hotGoods: [],
      topics: [],
      brands: [],
      floorGoods: [],
      banner: [],
      channel: [],

      navList: [],
      goodsList: [],
      id: 1005000,
      currentCategory: {},
      scrollLeft: 0,
      scrollTop: 0,
      page: 1,
      size: 10000


    }
    methods = {


              async switchCate (event) {
                if (this.id === event.currentTarget.dataset.id) {
                  return false
                }
                var clientX = event.detail.x
                var currentTarget = event.currentTarget
                if (clientX < 60) {
                  this.scrollLeft = currentTarget.offsetLeft - 60
                } else if (clientX > 330) {
                  this.scrollLeft = currentTarget.offsetLeft
                }
                this.id = event.currentTarget.dataset.id
                this.$apply()
                await this.getCategoryInfo()
              }
            
           


    }
     async getCategoryInfo () {
              let res = await util.request(api.GoodsCategory, {id: this.id});
              console.log("分类");
              console.log(res);
              if (res.errno === 0) {
                this.navList = res.data.brotherCategory
                this.currentCategory = res.data.currentCategory
                // nav位置
                let currentIndex = 0
                let navListCount = this.navList.length
                for (let i = 0; i < navListCount; i++) {
                  currentIndex += 1
                  if (this.navList[i].id === this.id) {
                    break
                  }
                }
                if (currentIndex > navListCount / 2 && navListCount > 5) {
                  this.scrollLeft = currentIndex * 60
                }
                this.$apply()
                await this.getGoodsList()
              }
            }
            async getGoodsList () {
              let res = await util.request(api.GoodsList, {categoryId: this.id, page: this.page, size: this.size})
              if (res.data) {
                this.goodsList = res.data.goodsList
                this.$apply()
              }
            }

    async getIndexData () {
      let res = await util.request(api.IndexUrl)
      if (res.errno === 0) {
        this.newGoods = res.data.newGoodsList
        this.hotGoods = res.data.hotGoodsList
        this.topics = res.data.topicList
        this.brand = res.data.brandList
        this.floorGoods = res.data.categoryList
        this.banner = res.data.banner
        this.channel = res.data.channel
        this.$apply()
      }
    }
    events = {
      'index-emit': (...args) => {
      }
    }
    onLoad() {


      // wx.navigateTo({
      //   url: "shouquan"
      // })

      
      this.getIndexData();


      console.log("#########88888###");

      try {
        let res = wepy.getSystemInfo()
        if (res) {
          this.scrollHeight = res.windowHeight
        }
      } catch (e) {


      }

      // console.log("############");
       this.getCategoryInfo()

      



    }
    onShareAppMessage () {
      return {
        title: '胤妃美业',
        desc: '杭州胤妃美业',
        path: '/pages/index/index'
      }
    }
  }
</script>
