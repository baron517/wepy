<template>
  <view class="container">
    <view class="profile-info" bindtap="goLogin">
      <image class="avatar" src="{{userInfo.avatar}}"></image>
      <view class="info">
        <text class="name">{{userInfo.username}}</text>
        <text class="level">余额：{{userInfo.m_yue}} 元</text>


      </view>
    </view>

    <view class="user-menu">
      <view class="item">
        <navigator url="/pages/ucenter/order" class="a">
          <text class="icon yuyue"></text>
          <text class="txt">我的预约<text class="quan" wx:if="{{countList.count0>0}}">{{countList.count0}}</text></text>
        </navigator>
      </view>
      <view class="item">
        <navigator url="/pages/ucenter/order1" class="a">
          <text class="icon dingdan"></text>
          <text class="txt">待确认<text class="quan" wx:if="{{countList.count1>0}}">{{countList.count1}}</text></text>
        </navigator>
      </view>
      <view class="item no-border">

        <navigator url="/pages/ucenter/order2" class="a">
          <text class="icon zhifu"></text>
          <text class="txt">待支付<text class="quan" wx:if="{{countList.count2>0}}">{{countList.count2}}</text></text>
        </navigator>

      </view>
      <view class="item">
        <navigator url="/pages/ucenter/order3" class="a">
          <text class="icon daishiyong"></text>
          <text class="txt">待使用<text class="quan" wx:if="{{countList.count3>0}}">{{countList.count3}}</text></text>
        </navigator>
      </view>
      <view class="item">
        <navigator url="url" class="a" url="/pages/ucenter/order4">
          <text class="icon daipingjia"></text>
          <text class="txt">待评价<text class="quan" wx:if="{{countList.count4>0}}">{{countList.count4}}</text></text>
        </navigator>
      </view>
      <view class="item no-border">
        <navigator url="/pages/ucenter/order5" class="a">
          <text class="icon pingjia"></text>
          <text class="txt">已完成</text>
        </navigator>
      </view>
      <view class="item item-bottom">
        <navigator url="/pages/ucenter/address" class="a">
          <text class="icon huiyuanka"></text>
          <text class="txt">会员卡</text>
        </navigator>
      </view>
      <view class="item item-bottom">
        <navigator url="coupon" class="a">
          <text class="icon youhuiquan"></text>
          <text class="txt">优惠券<text class="quan" wx:if="{{countList.yhq_count>0}}">{{countList.yhq_count}}</text></text>
        </navigator>
      </view>
      <view class="item no-border item-bottom">
        <view  class="a" @tap="tel()">
          <text class="icon kefu"></text>
          <text class="txt">联系客服</text>
        </view>
      </view>
      
     
    </view>

    <view class="logout" bindtap="exitLogin" wx:if="{{token}}">退出登录</view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import util from '../../utils/util.js'
  import api from '../../config/api.js'
  import user from '../../services/user.js'

  export default class Index extends wepy.page {

    config = {
      backgroundColor: '#f4f4f4',
      navigationBarTitleText: '会员中心'
    }
    data = {
      countList:{},
      userInfo: {},
      token: ''
    }
    onLoad() {
      console.log(this.$parent.globalData);
    }

    async userCount () {
      let res = await util.request(api.userCount,{yy_m_id:this.$parent.globalData.userInfo.m_id});
      if (res.code == 1000) {

        this.countList=res.data;
        console.log(res.data);

        this.$apply()
      }
    }

    onShow() {
      let userInfo = wepy.getStorageSync('userInfo')
      let token = wepy.getStorageSync('token')
      // 页面显示
      if (userInfo && token) {
        this.$parent.globalData.userInfo = userInfo
        this.$parent.globalData.token = token
      }
      this.userInfo = this.$parent.globalData.userInfo
      this.token = this.$parent.globalData.token

      this.userCount();

    }
    methods = {
      async goLogin() {
        let res = await user.loginByWeixin()
        console.log(res)
        if (res && res.errno === 0) {
          this.userInfo = res.data.userInfo
          this.token = res.data.token
          this.$parent.globalData.userInfo = res.data.userInfo
          this.$parent.globalData.token = res.data.token
          this.$apply()
        } else {
          wepy.showModal({
            title: '失败',
            content: '登录失败',
            showCancel: false
          })
        }
      },

      async tel () {
        wx.makePhoneCall({
          phoneNumber: this.$parent.globalData.lianxi
        })
      },

      async exitLogin () {
        try {
          let res = await wepy.showModal({
            title: '',
            confirmColor: '#b4282d',
            content: '退出登录？'
          })
          if (res.confirm) {
            wepy.removeStorageSync('token')
            wepy.removeStorageSync('userInfo')
            wepy.switchTab({
              url: '/pages/index'
            })
            this.$parent.globalData = {
              userInfo: {
                nickname: 'Hi,游客',
                username: '点击去登录',
                avatar: 'http://yanxuan.nosdn.127.net/8945ae63d940cc42406c3f67019c5cb6.png'
              },
              token: ''
            }
          }
        } catch (e) {}
      }
    }
  }
</script>
